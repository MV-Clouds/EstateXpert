            <script>
                let phoneNumberId = '';
                let wabaId = '{!businessAccountId}';
                let storedAppId = '{!appId}';
                let storedAccessToken = '{!accessToken}';
                let storedPhoneNumberId = '{!phoneNumberId}';
                let storedLastModifiedDate = '{!lastModifiedDate}';

                // Utility functions for modal and spinner
                function showSpinner(message = 'Loading...') {
                    const spinner = document.getElementById('loading-spinner');
                    const spinnerText = spinner.querySelector('.spinner-text');
                    spinnerText.textContent = message;
                    spinner.classList.add('show');
                }

                function hideSpinner() {
                    const spinner = document.getElementById('loading-spinner');
                    spinner.classList.remove('show');
                }

                function showConfirmationModal() {
                    const modal = document.getElementById('confirmation-modal');
                    modal.classList.add('show');
                }

                function closeConfirmationModal() {
                    const modal = document.getElementById('confirmation-modal');
                    modal.classList.remove('show');
                }
                
                // Show initial loading
                showSpinner('Loading configuration...');
                
                if(wabaId){
                    document.getElementById("setup-form-div").style.display = "none";
                    document.getElementById("config-details-div").style.display = "block";
                    document.getElementById('waba-id-display').textContent = wabaId;
                    
                    // Set the last modified date
                    if(storedLastModifiedDate) {
                        document.getElementById('last-edited').textContent = storedLastModifiedDate;
                    }
                }                
                // Hide spinner after page loads
                setTimeout(() => {
                    hideSpinner();
                }, 300);                
                window.addEventListener('message', (event) => {
                    if (event.origin !== "https://www.facebook.com" && event.origin !== "https://web.facebook.com") {
                        return;
                    }
                    try {
                        const data = JSON.parse(event.data);
                        if (data.type === 'WA_EMBEDDED_SIGNUP') {
                            // if user finishes the Embedded Signup flow
                            if (data.event === 'FINISH') {
                                const {phone_number_id, waba_id} = data.data;
                                phoneNumberId = phone_number_id;
                                wabaId = waba_id;
                            } 
                            // if user cancels the Embedded Signup flow
                            else if (data.event === 'CANCEL') {
                                const {current_step} = data.data;
                                document.getElementById("error-message").textContent = "Please complete all the steps.";
                            } 
                            // if user reports an error during the Embedded Signup flow
                            else if (data.event === 'ERROR') {
                                const {error_message} = data.data;
                                document.getElementById("error-message").textContent = "There was some error logging you in.";
                            }
                        }
                        // document.getElementById("session-info-response").textContent = JSON.stringify(data, null, 2);
                    } catch {
                        if(event.data.includes('error=')){
                            document.getElementById("error-message").textContent = "Could not log you in, try again...";
                        } 
                    }
                });
